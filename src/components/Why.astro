---
const features = [
  {
    title: 'Fresh food',
    description: 'We serve the best and fresh quality food',
    icon: 'https://via.placeholder.com/64x64.png?text=Icon1' // Reemplaza por el ícono que desees
  },
  {
    title: 'Best offer',
    description: 'We give the best offer for our valuable customers',
    icon: 'https://via.placeholder.com/64x64.png?text=Icon2' // Reemplaza por el ícono que desees
  },
  {
    title: 'Fast delivery',
    description: 'We have delivery van to fast delivery',
    icon: 'https://via.placeholder.com/64x64.png?text=Icon3' // Reemplaza por el ícono que desees
  }
];
---

<section id="WHY" class="bg-gray-900 py-16 px-4">
  <div class="max-w-screen-xl mx-auto text-center text-white pt-10">
    <!-- Título principal -->
    <h2 class="text-4xl font-bold mb-4">Why choose us?</h2>
    <p class="text-gray-400 mb-12">Over the million of peoples are happy with us</p>

    <!-- Sección de características -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
      {features.map(feature => (
        <div class="flex flex-col items-center">
          <!-- Ícono -->
          <img src={feature.icon} alt={feature.title} class="mb-4 w-16 h-16" />
          <!-- Título del ítem -->
          <h3 class="text-2xl font-semibold mb-2">{feature.title}</h3>
          <!-- Descripción del ítem -->
          <p class="text-gray-400">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
